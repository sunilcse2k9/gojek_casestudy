<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deal_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:background="@drawable/dotted_9b9b9b_rounded_4dp"
    android:padding="5dp">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/deal_list_item_image_view"
        android:layout_width="@dimen/deal_list_item_image_size"
        android:layout_height="@dimen/deal_list_item_image_size"/>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="36dp"
      android:layout_marginStart="2dp"
      android:background="@drawable/list_item_selector"
      android:orientation="vertical">

    <TextView
        android:id="@+id/deal_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Women's toll tray lens and Dress"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_color">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <TextView
          android:id="@+id/deal_list_item_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="$ 9"
          android:layout_marginTop="4dp"
          android:layout_weight="1"
          android:textSize="28sp" />

      <TextView
          android:id="@+id/deal_list_ship"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/ship"
          android:textColor="@color/black"
          android:layout_marginEnd="8dp"
          android:layout_gravity="center"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/deal_list_or"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/or"
          android:textColor="@color/lightGrey"
          android:layout_marginEnd="8dp"
          android:layout_gravity="center"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/deal_list_size"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          tools:text="C1"
          android:gravity="end"
          android:padding="4dp"
          android:textColor="@color/red_color"
          android:background="@drawable/gray_circle"
          android:layout_marginEnd="16dp"
          android:layout_gravity="center"
          android:textStyle="bold"
          android:textSize="16sp" />

    </LinearLayout>

  </LinearLayout>

</LinearLayout>
