<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="@string/repositories"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constrainedHeight="true"
        android:paddingEnd="20dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/title_rv_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:background="@color/color_d8d8d8"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/title_rv_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedHeight="true">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_repositories"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_d8d8d8"
            tools:itemCount="5"
            tools:listitem="@layout/repository_list_item"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/layer_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:constraint_referenced_ids="iv_no_internet, tv_error_header, tv_error_sub_header, btn_retry"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/nointernet_connection"
        app:layout_constraintTop_toTopOf="@id/title_rv_separator"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv_error_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_no_internet"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/color_4A4A4A"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/something_wrong"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/tv_error_sub_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_error_header"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/color_929292"
        android:fontFamily="@font/roboto"
        android:text="@string/alien_blocking_signal"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/btn_retry"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/green_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        android:fontFamily="@font/roboto_medium"
        android:textAllCaps="true"
        android:textSize="15dp"
        android:text="@string/retry"
        android:textColor="@color/color_31B057"/>
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_rv_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>